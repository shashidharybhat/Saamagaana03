<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button_Abhyasa"
        android:layout_width="157dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:background="@color/colourPrimaryLight"
        android:text="@string/saralivarisai"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184" />

    <Button
        android:id="@+id/down1aud"
        android:layout_width="47dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/down1txt"
        app:layout_constraintStart_toEndOf="@+id/down1txt"
        app:layout_constraintTop_toTopOf="@+id/button_Abhyasa"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/down1txt"
        android:layout_width="45dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_Abhyasa"
        app:layout_constraintStart_toEndOf="@+id/button_Abhyasa"
        app:layout_constraintTop_toTopOf="@+id/button_Abhyasa"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="@+id/down1txt"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/down1aud"
        app:layout_constraintStart_toStartOf="@+id/down1aud"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Chapters"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_Abhyasa"
        app:layout_constraintEnd_toEndOf="@+id/button_Abhyasa"
        app:layout_constraintStart_toStartOf="@+id/button_Abhyasa" />

    <android.support.constraint.Constraints
        android:id="@+id/constraints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>